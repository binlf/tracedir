{
  "name": "dirtrace",
  "version": "0.0.2",
  "bin": {
    "dirtrace": "./dist/index.js",
    "drtr": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "link": "bun unlink && bun link",
    "unlink": "bun unlink"
  },
  "files": [
    "dist/"
  ],
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm"
    ],
    "clean": true
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.6.1",
    "tsup": "^8.3.6",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "fs-extra": "^11.3.0",
    "picocolors": "^1.1.1"
  }
}
